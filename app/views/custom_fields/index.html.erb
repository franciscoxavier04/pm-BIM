<% html_title(t(:label_administration), t(:label_custom_field_plural)) -%>

<%= render CustomFields::IndexPageHeaderComponent.new(tabs: custom_fields_tabs) %>

<%=
  render(Primer::OpenProject::SubHeader.new) do |subheader|
    subheader.with_action_menu(
      scheme: :primary,
      leading_icon: :plus,
      trailing_icon: :"triangle-down",
      label: I18n.t(:label_custom_field_new),
      button_arguments: {
        scheme: :primary,
        aria: { label: I18n.t(:label_custom_field_new) }
      }
    ) do |menu|
      OpenProject::CustomFieldFormat.all_for_class_name(@tab.delete_suffix("CustomField"))
                                    .sort_by(&:name)
                                    .map do |format|
        menu.with_item(
          label: label_for_custom_field_format(format.name),
          tag: :a,
          href: new_custom_field_path(type: selected_tab(custom_fields_tabs)[:name], field_format: format.name)
        )
      end
    end
  end
%>

<%= render_tabs custom_fields_tabs %>
