<div class="attributes-group" id="icalendar-token-section">
  <div class="attributes-group--header">
    <div class="attributes-group--header-container">
      <h3 class="attributes-group--header-text"><%= t("my_account.access_tokens.ical_meeting.title") %></h3>
    </div>
  </div>
  <div>
    <p>
      <%= t("my_account.access_tokens.ical_meeting.text_hint") %>
    </p>
    <% if Setting.ical_enabled? %>
      <% if ical_tokens.any? %>
        <div class="generic-table--container">
          <div class="generic-table--results-container">
            <table class="generic-table" data-controller="table-highlighting">
              <%= render  partial: "token_table_header",
                          locals: {
                            column_headers: [
                              t("attributes.name"),
                              User.human_attribute_name(:created_at),
                              t("my_account.access_tokens.headers.expiration")
                            ]
                          } %>
              <tbody>
                  <% ical_tokens.each do |token| %>
                    <tr>
                      <td class="-w-rel-20 -mw-abs-200" data-test-selector="ical-meeting-token-row-<%= token.id %>-name"><%= token.token_name %></td>
                      <td>
                        <span title="<%= format_time(token.created_at) %>">
                          <%= format_time(token.created_at.to_s) %>
                        </span>
                      </td>
                      <td><%= t("my_account.access_tokens.indefinite_expiration") %></td>
                      <td class="buttons">
                        <%= link_to "",
                                    { action: "revoke_ical_meeting_token", id: token.id },
                                    data: { confirm: t("my_account.access_tokens.simple_revoke_confirmation"), test_selector: "ical-meeting-token-row-#{token.id}-revoke" },
                                    method: :delete,
                                    class: "icon icon-delete" %>
                      </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
      <% end %>
              <%= render(
                    Primer::Beta::Button.new(
                      tag: :a,
                      mt: 3,
                      scheme: :secondary,
                      test_selector: "ical-meeting-token-add",
                      href: dialog_my_access_tokens_path(token_type: "ical-meeting"),
                      data: { turbo_stream: true },
                      aria: { label: I18n.t("my.access_token.new_ical_meeting_token_dialog_show_button_text") },
                      role: "button",
                      title: I18n.t("my.access_token.new_ical_meeting_token_dialog_show_button_text")
                    )
                  ) do |button|
                    button.with_leading_visual_icon(icon: :rss)
                    I18n.t("my.access_token.new_ical_meeting_token_dialog_show_button_text")
                  end %>
    <% else %>
      <div tabindex="0" class="-info op-toast">
        <div role="alert" aria-atomic="true" class="op-toast--content">
          <p>
            <span><%= t("my_account.access_tokens.ical_meeting.disabled_text") %></span>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
