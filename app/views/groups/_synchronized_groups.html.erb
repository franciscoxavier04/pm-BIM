<% visible_partials = Group.synchronized_group_partials.select { |config| config.fetch(:count_callback).call(@group).positive? } %>
<% if visible_partials.any? %>
  <% visible_partials.each do |config| %>
    <%=
      render(Primer::Beta::Subhead.new(hide_border: true)) do |component|
        component.with_heading(size: :medium) do
          I18n.t(config.fetch(:title))
        end
      end
    %>
    <%= render partial: config.fetch(:partial), locals: { group: @group } %>
  <% end %>
<% else %>
  <%=
    render(Primer::Beta::Blankslate.new(border: true)) do |blankslate|
      blankslate.with_heading(tag: :h2) { t(".blankslate.title") }
      blankslate.with_description { t(".blankslate.description") }
      blankslate.with_primary_action(tag: :a, href: admin_settings_authentication_path) { t(".blankslate.action") }
    end
  %>
<% end %>
