<p><%= I18n.t(:label_custom_export_font_instructions) %></p>

<% export_fonts(@custom_style).each do |font| %>
  <%= form_for @custom_style, url: custom_style_path, html: { multipart: true, class: "form -vertical" } do |f| %>
    <section class="form--section">
      <fieldset class="form--fieldset">
        <legend class="form--fieldset-legend"><%= font[:label] %></legend>
        <% if font[:present] %>
          <div>
            <span><%= font[:filename] %></span>
            <%= link_to t(:button_delete), font[:delete_path], method: :delete, class: "icon icon-delete confirm-form-submit" %>
          </div>
        <% end %>
        <div class="grid-block">
          <div class="form--field -required">
            <div class="attachment_field form--field-container -vertical -shrink">
              <div class="form--file-container">
                <%= f.file_field font[:field], required: true, class: "attachment_choose_file", accept: "font/ttf", size: "15" %>
              </div>
            </div>
            <div class="form--field-instructions"><%= font[:instructions] %></div>
          </div>
        </div>
        <%= styled_button_tag t(font[:present] ? :button_replace : :button_upload),
                              class: "button #{font[:present] ? '' : '-with-icon icon-add'}" %>
      </fieldset>
    </section>
  <% end %>
<% end %>
