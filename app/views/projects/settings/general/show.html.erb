      scheme: :warning,
      icon: :alert,
      mb: 2,
      test_selector: "op-projects-public-warning"
    ) do |banner|
      banner.with_action_button(
        tag: :a,
        href: toggle_public_dialog_project_settings_general_path(@project),
        data: { turbo_stream: true },
        size: :medium,
      ) { @project.public? ? t(:button_unpublish) : t(:button_publish) }

