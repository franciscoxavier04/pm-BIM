      "examples" : [
        "10mm",
        "10"
      ]
    },
    "measurement_signed" : {
      "type" : [
        "number",
        "string"
      ],
      "pattern" : "^-?([0-9\\.]+)(mm|cm|dm|m|in|ft|yr|pt)$",
