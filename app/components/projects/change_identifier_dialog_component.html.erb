<%=
  primer_form_with(
    model: @project,
    url: project_identifier_path(@project),
    method: :patch,
    data: { turbo: true }
  ) do |f|
    render(
      Primer::OpenProject::DangerDialog.new(
        id:,
        size: :medium_portrait,
        title: t("project.identifier.title"),
        confirm_button_text: t(:button_change),
        form_arguments: { builder: f }
      )
    ) do |dialog|
      dialog.with_confirmation_message do |message|
        message.with_heading(tag: :h2) { t("project.identifier.heading") }
        message.with_description do
          helpers.safe_join(
            [
              t("project.identifier.warning_one"),
              t("project.identifier.warning_two")
            ], " "
          )
        end
      end
      dialog.with_additional_details do
        auto_check_src = check_project_identifier_path(@project)
        render_inline_form(f) do |form|
          form.text_field(
            name: :identifier,
            label: Project.human_attribute_name(:identifier),
            caption: helpers.safe_join(
              [
                I18n.t(:text_length_between, min: 1, max: Project::IDENTIFIER_MAX_LENGTH),
                I18n.t(:text_project_identifier_info)
              ], " "
            ),
            required: true,
            auto_check_src:
          )
        end
      end
    end
  end
%>
