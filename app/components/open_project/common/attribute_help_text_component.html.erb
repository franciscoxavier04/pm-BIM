<%= render Primer::Beta::Link.new(**@system_arguments) do |link| %>
  <% if additional_label? %>
    <% link.with_trailing_visual_icon(icon: :question, size: :xsmall) %>
    <%= additional_label %>
  <% else %>
    <%= render Primer::Beta::Octicon.new(:question, size: :xsmall) %>
  <% end %>
<% end %>
<%= render @tooltip %>
