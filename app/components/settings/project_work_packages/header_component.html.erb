<%=
  render Primer::OpenProject::PageHeader.new do |header|
    header.with_title { t(:label_work_package_plural) }
    header.with_breadcrumbs(breadcrumbs_items)
    header.with_tab_nav(label: nil) do |tab_nav|
      if show_types?
        tab_nav.with_tab(selected: selected?(:types), href: project_settings_work_packages_types_path) do |tab|
          tab.with_text { t("settings.work_packages.types_tab") }
        end
      end
      if show_categories?
        tab_nav.with_tab(selected: selected?(:categories), href: project_settings_work_packages_categories_path) do |tab|
          tab.with_text { t("settings.work_packages.categories_tab") }
        end
      end
      if show_custom_fields?
        tab_nav.with_tab(selected: selected?(:custom_fields), href: project_settings_work_packages_custom_fields_path) do |tab|
          tab.with_text { t("settings.work_packages.custom_fields_tab") }
        end
      end
    end
  end
