<%= @series.project.name %>: <%= @series.title %> (<%= recurring_meeting_url(@series) %>)
<%= @series.author %>

<%= t(
      "meeting.email.series_updated.summary",
      actor: @actor,
      title: @series.title
    ) %>

<% if @changes[:old_schedule] != @series.full_schedule_in_words %>
<%= t("meeting.email.series_updated.old_schedule") %>:
<%= @changes[:old_schedule] %> (<%= formatted_time_zone_offset %>)

<%= t("meeting.email.series_updated.new_schedule") %>:
<%= @series.full_schedule_in_words %> (<%= formatted_time_zone_offset %>)
<% else %>
<%= I18n.t(:label_recurring_meeting_schedule) %>
<%= @series.full_schedule_in_words %> (<%= formatted_time_zone_offset %>)
<% end %>

<% if @changes[:old_location].present? || @series.location.present? %>
<% if @changes[:old_location] != @series.location %>
<%= t("meeting.email.updated.old_location") %>:
<%= @changes[:old_location].presence || "-" %>

<%= t("meeting.email.updated.new_location") %>:
<%= @series.location.blank? ? "-" : (auto_link @series.location) %>
<% else %>
<%= Meeting.human_attribute_name(:location) %>:
<%= auto_link @series.location %>
<% end %>
<% end %>
