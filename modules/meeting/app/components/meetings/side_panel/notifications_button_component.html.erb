<%=
  component_wrapper do
    render(Primer::OpenProject::FlexLayout.new) do |flex|
      flex.with_row do
        render(Primer::OpenProject::FlexLayout.new(align_items: :center)) do |row|
          row.with_column do
            render(Primer::Beta::Heading.new(tag: :h5)) { I18n.t("label_send_email_updates") }
          end

          row.with_column(ml: 2) do
            if @meeting.notify?
              concat(
                render(Primer::Beta::Text.new(color: :success, font_size: :small)) do
                  I18n.t("label_status_enabled")
                end
              )
            else
              concat(
                render(Primer::Beta::Text.new(color: :danger, font_size: :small)) do
                  I18n.t("label_status_muted")
                end
              )
            end
          end
        end
      end

      if show_button?
        flex.with_row(mt: 2) do
          render(
            Primer::Beta::Button.new(
              scheme: :default,
              block: true,
              tag: :a,
              href: toggle_notifications_dialog_project_meeting_path(@project, @meeting),
              title: I18n.t("label_send_email_updates"),
              data: { "turbo-stream": true }
            )
          ) { title }
        end
      end
    end
  end
