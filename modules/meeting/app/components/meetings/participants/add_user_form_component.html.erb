<%=
  component_wrapper do
    primer_form_with(
      model: MeetingParticipant.new(meeting: @meeting),
      url: meeting_participants_path(@meeting)
    ) do |form|
      grid_layout("meeting-participant-form", tag: :div) do |grid|
        grid.with_area(:participant) do
          render(Meeting::Participant.new(form))
        end

        grid.with_area(:submit) do
          render(Primer::Beta::Button.new(scheme: :primary, type: :submit)) do
            I18n.t(:button_add)
          end
        end
      end
    end
  end
%>
