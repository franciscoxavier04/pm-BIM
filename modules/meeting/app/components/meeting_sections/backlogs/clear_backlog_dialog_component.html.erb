<%=
  render(
    Primer::OpenProject::DangerDialog.new(
      id: "meetings-clear-backlog-dialog",
      confirm_button_text: I18n.t(:label_backlog_clear_button),
      title: I18n.t(:label_backlog_clear),
      form_arguments: {
        action: clear_backlog_meeting_sections_path(@meeting),
        method: :post
      }
    )
  ) do |dialog|
    dialog.with_confirmation_message do |message|
      message.with_heading(tag: :h2) { I18n.t(:label_agenda_backlog_clear_title) }
      message.with_description_content(I18n.t(:text_agenda_backlog_clear_description))
    end
  end
%>
