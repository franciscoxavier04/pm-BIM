<%=
  component_wrapper do
    unless @hidden
      render(
        MeetingAgendaItems::Outcomes::FormComponent.new(
          meeting: @meeting,
          meeting_agenda_item: @meeting_agenda_item,
          meeting_outcome: @meeting_outcome,
          method: :post,
          submit_path: meeting_outcomes_path(@meeting, meeting_agenda_item_id: @meeting_agenda_item&.id, format: :turbo_stream),
          cancel_path: cancel_new_meeting_outcomes_path(@meeting, meeting_agenda_item_id: @meeting_agenda_item&.id)
        )
      )
    end
  end
%>
