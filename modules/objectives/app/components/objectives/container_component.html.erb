<%
  @objectives.each do |obj|
    key_metrics = key_metrics(obj)
    concat(
      render(Primer::Beta::BorderBox.new(mb: 3)) do |box|
       box.with_header do
         render(Primer::OpenProject::BorderBox::CollapsibleHeader.new(box:)) do |header|
           header.with_count(count: key_metrics.count)
            header.with_title do
              # render(Primer::OpenProject::FlexLayout.new(justify_content: :space_between, align_items: :center)) do |flex|
              #   flex.with_column(flex_layout: true) do |wp_flex|
              #     wp_flex.with_row do
              #       render(WorkPackages::InfoLineComponent.new(work_package: obj))
              #     end
              #     wp_flex.with_row do
              #       render(Primer::Beta::Text.new(font_weight: :bold)) { obj.subject }
              #     end
              #   end
              # end
              render(Primer::Beta::Text.new) { obj.subject }
              # TODO parent subject + more details?
            end
         end
       end

       key_metrics.each do |metric|
         box.with_row do
           render(Primer::OpenProject::FlexLayout.new(justify_content: :space_between, align_items: :center)) do |flex|
             flex.with_column(flex_layout: true) do |wp_flex|
               wp_flex.with_row do
                 render(WorkPackages::InfoLineComponent.new(work_package: metric))
               end
               wp_flex.with_row do
                 render(Primer::Beta::Text.new(font_weight: :bold)) { metric.subject }
               end
             end

             flex.with_column(style: "width: 50%") do
               render(Primer::Beta::ProgressBar.new(size: :large)) do |component|
                 component.with_item(
                   classes: "__hl_background_status_#{metric.status_id}",
                   percentage: 50 # TODO derive actual value
                 )
               end
             end
           end
         end
       end
     end
    )
 end
%>
