<%=
  component_wrapper do
    render(Primer::Alpha::Layout.new(stacking_breakpoint: :lg)) do |page|
      page.with_main do
        if @report.nil?
          render(Primer::Beta::Blankslate.new(border: true)) do |placeholder|
            placeholder.with_visual_icon(icon: :meter)
            placeholder.with_heading(tag: :h3) { data[:heading] }
            placeholder.with_description { data[:description] }
            placeholder.with_primary_action(
              tag: :a,
              href: admin_settings_storage_health_status_report_path(model),
              data: { turbo_method: :post, turbo: true },
              aria: { label: I18n.t("storages.health.actions.run_checks") }
            ) do
              I18n.t("storages.health.actions.run_checks")
            end
          end
        else
          flex_layout do |report_container|
            report_container.with_row do
              summary = data[:summary]
              concat(render(Primer::Beta::Octicon.new(icon: summary[:icon], color: summary[:icon_color], mr: 2)))
              concat(render(Primer::Beta::Text.new(font_weight: :bold)) { summary[:text] })
            end

            report_container.with_row(mt: 2) do
              render(Primer::Beta::Text.new) { data[:description] }
            end

            @report.each_pair do |group, checks|
              report_container.with_row(mt: 3) do
                render(Primer::Beta::BorderBox.new(test_selector: "op-storages--health-report-group")) do |box|
                  box.with_header do
                    flex_layout(justify_content: :space_between) do |header|
                      header.with_column do
                        render(Primer::Beta::Text.new(font_weight: :bold)) do
                          I18n.t("storages.health.checks.#{group}.header")
                        end
                      end

                      header.with_column do
                        summary = summary_with_icon(checks.tally)
                        concat(render(Primer::Beta::Octicon.new(icon: summary[:icon], color: summary[:icon_color], mr: 2)))
                        concat(render(Primer::Beta::Text.new) { summary[:text] })
                      end
                    end
                  end

                  checks.each_pair do |_key, value|
                    box.with_row { render(Storages::Admin::Health::CheckResultComponent.new(group:, result: value)) }
                  end
                end
              end
            end
          end
        end
      end

      page.with_sidebar(col_placement: :end, row_placement: :end)
    end
  end
%>
