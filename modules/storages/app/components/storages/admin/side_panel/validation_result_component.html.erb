<%=
  component_wrapper do
    flex_layout do |container|
      if validation_result?
        container.with_row(test_selector: "validation-result--subtitle") do
          header = status_summary

          concat(render(Primer::Beta::Octicon.new(icon: header[:icon], color: header[:color], mr: 2)))
          concat(render(Primer::Beta::Text.new(font_weight: :bold)) { header[:text] })
        end

        container.with_row(mt: 2) do
          render(Primer::Beta::Text.new(color: :muted, test_selector: "validation-result--description")) do
            "All connections and systems are working as expected. Last check: 28.03.2025 6:40 PM."
          end
        end

        container.with_row(mt: 2) do
          render(Storages::Admin::SidePanel::HealthReportDialogComponent.new(storage: model, report: @result))
        end
      else
        container.with_row do
          primer_form_with(
            model:,
            url: validate_connection_admin_settings_storage_connection_validation_path(model),
            method: :post,
            data: { turbo: true }
          ) do
            render(
              Primer::Beta::Button.new(
                scheme: :link,
                color: :default,
                font_weight: :bold,
                type: :submit
              )
            ) do |button|
              button.with_leading_visual_icon(icon: "meter")
              I18n.t("storages.health.connection_validation.action")
            end
          end
        end
      end
    end
  end
%>
