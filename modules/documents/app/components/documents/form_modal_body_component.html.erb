  component_wrapper do
    primer_form_with(
      model:,
      url:,
      data: { turbo: true },
      method:
    ) do |form|
      concat(
        render(
          Primer::Alpha::Dialog::Body.new(
            id: dialog_body_id,
            test_selector: dialog_body_id,
            aria: { label: aria_label }
          )
        ) do
          flex_layout do |flex|
            flex.with_row(mb: 3) do
              render Documents::CategoryForm.new(form)
            end

            if new_record?
              flex.with_row(mb: 3) do
                render Documents::TitleForm.new(form)
              end
            end
          end
        end
      )

      concat(
        render(Primer::Alpha::Dialog::Footer.new(show_divider: false)) do
          concat(render(Primer::Beta::Button.new(data: { "close-dialog-id": dialog_id })) { I18n.t("button_cancel") })
          concat(render(Documents::SubmitForm.new(form)))
        end
      )
    end
  end
