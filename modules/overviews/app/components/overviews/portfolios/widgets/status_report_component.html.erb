<%= render(Primer::Beta::BorderBox.new) do |component|
  component.with_header do
    render(Primer::OpenProject::BorderBox::CollapsibleHeader.new(box: component)) do |header|
      header.with_title do
        concat(render(Primer::Beta::Octicon.new(icon: :note, color: :muted, mr: 2)))
        concat(render(Primer::Beta::Text.new) { "Letzter Statusbericht" })
      end
    end
  end

  component.with_row do
    if status_report # TODO: only show if permission view_documents
      concat(render(Primer::Beta::Link.new(href: document_path(status_report), display: :block, font_weight: :bold, mb: 2)) { title })
      concat(render(Primer::Beta::Text.new) { format_text content })
    end

    # TODO: only show if permission manage_documents
    concat(
      primer_form_with(url: create_project_status_report_path) do |f|
        render(Primer::Beta::Button.new(mt: 2, type: :submit)) do |button|
          button.with_leading_visual_icon(icon: :"sparkles-fill", color: :muted)
          "Neuen Statusbericht erstellen"
        end
      end
    )
  end

  component.with_row do
    flex_layout(justify_content: :space_between) do |layout|
      layout.with_column { render(Primer::Beta::Text.new(color: :muted)) { previous_reports_text } }
      layout.with_column { render(Primer::Beta::Link.new(href: project_documents_path(@project), font_weight: :semibold)) { "Alle anzeigen" } }
    end
  end
end %>
