<%= render(Primer::Beta::Text.new) do
  flex_layout do |layout|
    layout.with_column do
      if checked
        render(Primer::Beta::Octicon.new(icon: :"check-circle", "aria-label": "Element erfüllt", mr: 2))
      else
        render(Primer::Beta::Octicon.new(icon: :circle, "aria-label": "Element nicht erfüllt", mr: 2))
      end
    end

    layout.with_column do
      concat(render(Primer::Beta::Text.new(font_weight: :bold, display: :block)) { title })
      concat(render(Primer::Beta::Text.new(color: :muted)) { description })
    end
  end
end %>
