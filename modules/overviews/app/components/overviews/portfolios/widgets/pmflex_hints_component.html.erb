<%= render(Primer::Beta::BorderBox.new) do |component|
  component.with_header do
    render(Primer::OpenProject::BorderBox::CollapsibleHeader.new(box: component)) do |header|
      header.with_title do
        concat(render(Primer::Beta::Octicon.new(icon: :"sparkles-fill", color: :muted, mr: 2)))
        concat(render(Primer::Beta::Text.new) { "PMflex Hinweise" })
      end
    end
  end

  component.with_row do
    flex_layout do |layout|
      layout.with_row do
        render(Primer::Beta::Text.new) { summary }
      end

      hints.each do |hint|
        layout.with_row(mt: 2) do
          render(Overviews::Portfolios::Widgets::PmflexHintComponent.new(hint))
        end
      end
    end
  end

  component.with_row do
    flex_layout(justify_content: :space_between) do |layout|
      layout.with_column do
        concat(render(Primer::Beta::Text.new(color: :muted)) { "Letzte Aktualisierung: " })
        if hints_updated_at.nil?
          concat(render(Primer::Beta::Text.new(color: :muted)) { "Nie" })
        else
          concat(render(OpPrimer::RelativeTimeComponent.new(datetime: hints_updated_at, color: :muted)))
        end
      end

      layout.with_column do
        primer_form_with(url: create_project_pmflex_hints_path) do |f|
          render(Primer::Beta::Button.new(type: :submit, scheme: :link)) do |button|
            "Erneut analysieren"
          end
        end
      end
    end
  end
end %>
