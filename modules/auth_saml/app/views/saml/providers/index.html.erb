<% html_title t(:label_administration), t("saml.providers.plural") %>

<%= content_for :content_header do %>
  <%= render(Primer::OpenProject::PageHeader.new) do |header|
        header.with_title { t("saml.providers.plural") }
        header.with_breadcrumbs(
          [{ href: admin_index_path, text: t("label_administration") },
           t("saml.providers.plural")]
        )
      end %>

  <%= render(Primer::OpenProject::SubHeader.new) do |subheader|
        subheader.with_action_button(
          scheme: :primary,
          leading_icon: :plus,
          label: I18n.t("saml.providers.label_add_new"),
          tag: :a,
          disabled: !EnterpriseToken.allows_to?(:sso_auth_providers),
          href: new_saml_provider_path
        ) do
          t("saml.providers.singular")
        end
      end %>
<% end %>

<%= render EnterpriseEdition::BannerComponent.new(:sso_auth_providers, i18n_scope: "saml.providers.upsell")%>
<%= render ::Saml::Providers::TableComponent.new(rows: @providers) %>
