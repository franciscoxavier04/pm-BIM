<% html_title t(:label_administration), t("plugin_costs.name") %>

<%=
  render(CostSettings::ShowPageHeaderComponent.new)
%>

<%=
  settings_primer_form_with(scope: :settings, action: :update, method: :patch) do |time_form|
    render_inline_settings_form(time_form) do |form|
      form.html_content do
        render(Primer::Beta::Subhead.new(hide_border: true)) do |subhead|
          subhead.with_heading(tag: :h3, size: :medium) { I18n.t(:label_costs) }
          subhead.with_description { I18n.t(:description_costs_settings) }
        end
      end
      form.text_field(name: :costs_currency, input_width: :small)
      form.text_field(name: :costs_currency_format, input_width: :small)

      form.submit
    end
  end
%>
