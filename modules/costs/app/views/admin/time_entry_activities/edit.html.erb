<% html_title t(:label_administration), t(:enumeration_activities) %>

<%=
  render(Primer::OpenProject::PageHeader.new) do |header|
    header.with_title { @time_entry_activity.name }
    header.with_description { I18n.t(:label_time_entry_activity_form_description) }
    header.with_breadcrumbs(
      [
        { href: admin_index_path, text: t("label_administration") },
        { href: admin_costs_settings_path, text: t(:project_module_costs) },
        { href: admin_time_entry_activities_path, text: TimeEntryActivity.model_name.human(count: :other) },
        @time_entry_activity.name
      ]
    )
  end
%>

<%= primer_form_with(model: @time_entry_activity, url: admin_time_entry_activity_path(@time_entry_activity)) do |f| %>
  <%= render(Admin::TimeEntryActivities::ActivityForm.new(f)) %>
<% end %>
